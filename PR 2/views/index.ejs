<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Student Todo List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(120deg, #74ebd5, #9face6);
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 90%;
      max-width: 1000px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    /* FORM */
    .form-box {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
      margin-bottom: 20px;
    }

    .form-box input {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      outline: none;
    }

    .form-box button {
      grid-column: span 4;
      padding: 12px;
      background: #4CAF50;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
    }

    .form-box button:hover {
      background: #43a047;
    }

    /* TABLE */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    th {
      background: #4CAF50;
      color: white;
      padding: 12px;
    }

    td {
      padding: 10px;
      text-align: center;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background: #f5f5f5;
    }

    .delete-btn {
      background: #e53935;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
    }

    .delete-btn:hover {
      background: #c62828;
    }

    .no-data {
      text-align: center;
      padding: 15px;
      color: #777;
    }

    @media (max-width: 768px) {
      .form-box {
        grid-template-columns: 1fr;
      }

      .form-box button {
        grid-column: span 1;
      }
    }
  </style>
</head>

<body>

  <div class="container">
    <h2>Student Todo List</h2>

    <!-- FORM -->
    <form class="form-box" action="/add" method="POST">
      <input type="text" name="name" placeholder="Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="text" name="course" placeholder="Course" required>
      <input type="text" name="mobile" placeholder="Mobile No" required>
      <button type="submit">âž• Add Student</button>
    </form>

    <!-- TABLE -->
    <table>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Course</th>
        <th>Mobile</th>
        <th>Action</th>
      </tr>

      <% if (todoList.length===0) { %>
        <tr>
          <td colspan="6" class="no-data">No Records Found</td>
        </tr>
        <% } %>

          <% todoList.forEach((item, index)=> { %>
            <tr>
              <td>
                <%= index + 1 %>
              </td>
              <td>
                <%= item.name %>
              </td>
              <td>
                <%= item.email %>
              </td>
              <td>
                <%= item.course %>
              </td>
              <td>
                <%= item.mobile %>
              </td>
              <td>
                <form action="/delete" method="POST">
                  <input type="hidden" name="index" value="<%= index %>">
                  <button class="delete-btn">Delete</button>
                </form>
              </td>
              <td>
                <a href="/edit/<%= index %>">Edit</a>
              </td>

            </tr>
            <% }) %>
    </table>
  </div>

</body>

</html>